{
  "name": "zenopay-plugins",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "workspaces": [
    "prestashop",
    "prestashop/*",
    "tiendanube",
    "tiendanube/*",
    "whm",
    "whm/*",
    "wordpress",
    "wordpress/*"
  ],
  "scripts": {
    "typecheck": "turbo run typecheck",
    "plugin:deploy:woo": "turbo run plugin:deploy --filter=zenopay-woocommerce",
    "plugin:deploy:edd": "turbo run plugin:deploy --filter=zenopay-edd-plugin"
  },
  "devDependencies": {
    "turbo": "^2.5.6"
  }
}
